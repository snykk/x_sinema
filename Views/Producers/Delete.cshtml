@model ProducerModel

@{
    ViewData["Title"] = "Delete producer data";
    ViewData["css"] = "Producers/CUD.css";
    ViewData["controller"] = "Producers";
    ViewData["action"] = "Delete Producer Data";
}

<div class="row gutters">
    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="preview">
                    <div class="profile">
                        <div class="avatar">
                            <img src="@Model.ProfilePictureURL" alt="Producer Image">
                        </div>
                        <h5 class="user-name">@Model.FullName</h5>
                    </div>
                    <div class="about">
                        <h5>Bio</h5>
                        <p>@Model.Bio</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="row gutters">
                    <div class="col-12">
                        <h6 class="mb-2 text-primary">Personal Details</h6>
                    </div>
                    <div class="col-12 mb-2">
                        <div class="form-group">
                            <label asp-for="FullName">Full Name</label>
                            <input type="text" class="form-control" asp-for="FullName" readonly>
                        </div>
                    </div>
                    <div class="col-12 mb-2">
                        <div class="form-group">
                            <label asp-for="ProfilePictureURL">Image Url</label>
                            <input type="text" class="form-control" asp-for="ProfilePictureURL" readonly>
                        </div>
                    </div>
                    <div class="col-12 mb-2">
                        <div class="form-group">
                            <label asp-for="Bio">Bio</label>
                            <input type="text" class="form-control" asp-for="Bio" readonly>
                        </div>
                    </div>
                </div>
                <form method="post" asp-controller="Producers" asp-action="DeletePost" class="d-flex justify-content-start align-items-center" id="form_delete_producer">
                    <input type="hidden" asp-for="Id" />
                    <a asp-controller="Producers" asp-action="Index" class="btn btn-outline-secondary me-2">Back to Company List</a>
                    <button class="btn btn-danger" type="submit" id="button_delete_producer">Delete Company Data</button>
                </form>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<br />


@section Scripts{
    <script src="@Url.Content("~/js/producer.js")" type="text/javascript"></script>
}
