@model ProducerModel

@{
    ViewData["Title"] = "Edit producer";
    ViewData["css"] = "Producers/CUD.css";
    ViewData["controller"] = "Producers";
    ViewData["action"] = "Edit Producer Data";
}

<div class="row gutters">
    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="preview">
                    <div class="profile">
                        <div class="avatar">
                            <img src="@Model.ProfilePictureURL" alt="Producer Image" id="producer_image">
                        </div>
                        <h5 class="user-name" id="producer_name">@Model.FullName</h5>
                    </div>
                    <div class="about">
                        <h5>Bio</h5>
                        <p id="producer_bio">Not yet....</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="row gutters">
                    <form method="post" asp-controller="Producers" asp-action="Edit" id="form_edit_producer">
                        <div class="col-12">
                            <h6 class="mb-2 text-primary">Personal Details</h6>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label asp-for="FullName">Full Name</label>
                                <input type="text" class="form-control" asp-for="FullName" placeholder="Enter full name here">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label asp-for="ProfilePictureURL">Image Url</label>
                                <input type="text" class="form-control" asp-for="ProfilePictureURL" placeholder="Inser producer image url here">
                                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label asp-for="Bio">Bio</label>
                                <input type="text" class="form-control" asp-for="Bio" placeholder="Enter producer bio">
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 mt-4">
                            <a asp-controller="Producers" asp-action="Index" class="btn btn-outline-secondary me-2">Back to Producer List</a>
                            <button class="btn btn-success" type="submit" id="button_edit_producer">Update Producer Data</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<br />

@section Scripts{
    <script>
        $("#FullName").on("keyup", function() {
            $("#producer_name").html($(this).val());
        })

        $("#ProfilePictureURL").on("keyup", function() {
            $("#producer_image").attr("src", $(this).val());
        })

        $("#Bio").on("keyup", function() {
            $("#producer_bio").html($(this).val());
        })
    </script>
    <script src="@Url.Content("~/js/producer.js")" type="text/javascript"></script>
} 
