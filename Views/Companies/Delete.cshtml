@model CompanyModel

@{
    ViewData["Title"] = "Delete company data";
    ViewData["css"] = "Companies/CUD.css";
    ViewData["controller"] = "Companies";
    ViewData["action"] = "Delete Company Data";
}

<div class="row gutters">
    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="preview">
                    <div class="profile">
                        <div class="avatar">
                            <img src="@Model.Logo" alt="Company Logo">
                        </div>
                        <h5 class="user-name">@Model.Name</h5>
                    </div>
                    <div class="about">
                        <h5>Description</h5>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="row gutters">
                    <div class="col-12">
                        <h6 class="mb-2 text-primary">Company Details</h6>
                    </div>
                    <div class="col-12 mb-2">
                        <div class="form-group">
                            <label asp-for="Name">Company Name</label>
                            <input type="text" class="form-control" asp-for="Name" readonly>
                        </div>
                    </div>
                    <div class="col-12 mb-2">
                        <div class="form-group">
                            <label asp-for="Logo">Company Logo</label>
                            <input type="text" class="form-control" asp-for="Logo" readonly>
                        </div>
                    </div>
                    <div class="col-12 mb-2">
                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input type="text" class="form-control" asp-for="Description" readonly>
                        </div>
                    </div>
                </div>
                <form method="post" asp-controller="Companies" asp-action="DeletePost" class="d-flex justify-content-start align-items-center" id="form_delete_company">
                    <input type="hidden" asp-for="Id" />
                    <a asp-controller="Companies" asp-action="Index" class="btn btn-outline-secondary me-2">Back to Company List</a>
                    <button class="btn btn-danger" type="submit" id="button_delete_company">Delete Company Data</button>
                </form>
            </div>
        </div>
    </div>
</div>

<br />
