@model CompanyModel

@{
    ViewData["Title"] = "Edit company data";
    ViewData["css"] = "Companies/CUD.css";
    ViewData["controller"] = "Companies";
    ViewData["action"] = "Edit Company Data";
}

<div class="row gutters">
    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="preview">
                    <div class="profile">
                        <div class="avatar">
                            <img src="@Model.Logo" alt="Company image" id="company_image">
                        </div>
                        <h5 class="user-name" id="company_name">@Model.Name</h5>
                    </div>
                    <div class="about">
                        <h5>Description</h5>
                        <p id="company_description">@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="row gutters">
                    <form method="post" asp-controller="Companies" asp-action="Edit" id="form_edit_company">
                        <div class="col-12">
                            <h6 class="mb-2 text-primary">Personal Details</h6>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Enter company name here">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label asp-for="Logo">Image Url</label>
                                <input type="text" class="form-control" asp-for="Logo" placeholder="Insert company image url here">
                                <span asp-validation-for="Logo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 mb-2">
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input type="text" class="form-control" asp-for="Description" placeholder="Enter description">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 mt-4">
                            <a asp-controller="Companies" asp-action="Index" class="btn btn-outline-secondary me-2">Back to Company List</a>
                            <button class="btn btn-success" type="submit" id="button_update_company">Update Company Data</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<br />

@section Scripts{
    <script>
        $("#Name").on("keyup", function() {
            $("#company_name").html($(this).val());
        });

        $("#Logo").on("keyup", function() {
            $("#company_image").attr("src", $(this).val());
        });

        $("#Description").on("keyup", function() {
            $("#company_description").html($(this).val());
        });
    </script>
    <script src="@Url.Content("~/js/company.js")" type="text/javascript"></script>
} 